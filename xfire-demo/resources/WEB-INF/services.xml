<xfire>
  <services>

    <service>
      <!-- The service name -->
      <name>Echo</name>
      
      <!-- The default namespace for the service -->
      <namespace>urn:Echo</namespace>
      
      <!-- The SOAP version -->
      <soapVersion>1.1</soapVersion>
      
      <!-- SOAP encoded or literal? -->
      <style>wrapped</style>
      
      <!-- Document or RPC? -->
      <use>literal</use>
      
      <!-- The class for the service -->
      <serviceClass>org.codehaus.xfire.demo.Echo</serviceClass>
    </service>
    
    <service>
      <name>BookService</name>
      <namespace>http://xfire.codehaus.org/BookService</namespace>
      <serviceClass>org.codehaus.xfire.demo.BookService</serviceClass>
      <allowedMethods></allowedMethods>
      <serviceProvider>java</serviceProvider>
      <soapVersion>1.1</soapVersion>
      <style>wrapped</style>
      <use>literal</use>
      <autoTyped>true</autoTyped>
    </service>
    
  </services>
</xfire>