<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/3.0.0 http://maven.apache.org/maven-v3_0_0.xsd">
    <extend>${basedir}/../project.xml</extend>
    <artifactId>xfire-castor</artifactId>
    <name>Castor XFire Module</name>
    <package>org.codehaus.xfire.castor</package>
    <shortDescription>A Castor binding for XFire.</shortDescription>
    <description>A Castor binding for XFire.</description>
    <siteDirectory>
        /home/projects/xfire/public_html/maven/xfire-${pom.currentVersion}/multiproject/${pom.artifactId}
    </siteDirectory>
    <dependencies>
        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire-core</artifactId>
            <version>${pom.currentVersion}</version>
            <url>${pom.url}</url>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire-aegis</artifactId>
            <version>${pom.currentVersion}</version>
            <url>${pom.url}</url>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor</artifactId>
            <version>0.9.9.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>1.6</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.7.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>stax-utils</groupId>
            <artifactId>stax-utils</artifactId>
            <version>snapshot-20040917</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <build>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <excludes>
                        <exclude>**/*.java</exclude>
                    </excludes>
                    <filtering>false</filtering>
                </resource>
                <resource>
                    <directory>${basedir}/src/test-schemas</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
