&lt;operation name="FindBook"&gt;
  Finds a book.
  &lt;request&gt;
    &lt;string name="isbn" ognl="#this" key="isbn"/&gt;
  &lt;/request&gt;
  &lt;response&gt;
    &lt;bean name="Book" key="book"&gt;
      &lt;string name="author" ognl="#author"/&gt;
      &lt;string name="title" ognl="#title"/&gt;
      &lt;string name="isbn" ognl="#isbn"/&gt;
    &lt;/bean&gt;
  &lt;/response&gt;
&lt;/operation&gt;