<project
  default="jar:install"
  xmlns:j="jelly:core"
  xmlns:ant="jelly:ant"
  xmlns:maven="jelly:maven"  
  xmlns:i="jelly:interaction">

  <ant:path id="xmlbeans.path">
    <ant:path refid="maven.dependency.classpath"/>
    <ant:pathelement path="${maven.build.dest}"/>
    <ant:pathelement path="${maven.test.dest}"/>
  </ant:path>
  
  <!-- 
    Generate XMLBeans objects for all the schemas in src/test-schemas 
    and make the WeatherService
   --> 
  <goal name="generate-test">
    
    <ant:delete dir="${maven.build.dir}/xfire-xmlbeans-test"/>
    <ant:mkdir dir="${maven.build.dir}/xfire-xmlbeans-test"/>
  
    <java classname="org.apache.xmlbeans.impl.tool.SchemaCompiler"
          classpathref="xmlbeans.path"
          fork="true">
      <arg value="-d"/>
      <arg value="${maven.build.dir}/xfire-xmlbeans-test"/>
      <arg value="${basedir}/src/test-schemas/WeatherForecast.xsd"/>
      <arg value="${basedir}/src/test-schemas/anyschema.xsd"/>
      <arg value="${basedir}/src/test-schemas/idref.xsd"/>
      <arg value="${basedir}/src/test-schemas/Base.xsd"/>
      <arg value="${basedir}/src/test-schemas/Request.xsd"/>
      <arg value="${basedir}/src/test-schemas/Response.xsd"/>
    </java>  	
  	<copy todir="${maven.test.dest}">
      <fileset dir="${maven.build.dir}/xfire-xmlbeans-test"/>
  	</copy>
  </goal>
  
  <goal name="support-jars">
	  <mkdir dir="${basedir}/target"/>

    <java classname="org.apache.xmlbeans.impl.tool.SchemaCompiler"
          classpathref="xmlbeans.path"
          fork="true">
      <arg value="-out"/>
      <arg value="${basedir}/target/weather.jar"/>
      <arg value="${basedir}/src/test-schemas/WeatherForecast.wsdl"/>
    </java>

    <java classname="org.apache.xmlbeans.impl.tool.SchemaCompiler"
          classpathref="xmlbeans.path"
          fork="true">
      <arg value="-out"/>
      <arg value="${basedir}/target/anyschema.jar"/>
      <arg value="${basedir}/src/test-schemas/anyschema.xsd"/>
    </java>
  </goal>

  <preGoal name="test:compile">
    <attainGoal name="generate-test"/>
  </preGoal>
  
</project>