<project default="install" xmlns:maven="jelly:maven">
  

  <goal name="install"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-demo/*"
      goals="jar:install"
      banner="Installing XFire"
      ignoreFailures="true"/>
    
  </goal>

  <goal name="deploySite"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="*"
      goals="site:deploy"
      banner="Deploy XFire Websites"
      ignoreFailures="true"/>
    
  </goal>

</project>