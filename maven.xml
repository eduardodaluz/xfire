<project default="install" xmlns:maven="jelly:maven">
  

  <goal name="install"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-core/project.xml"
      excludes="xfire-plexus/*,xfire-aegis/*,xfire-xmlbeans/*,xfire-demo/*,xfire-java/*"
      goals="pom:install,jar:install"
      banner="Installing XFire Core"
      ignoreFailures="false"/>
            
    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-xmlbeans/project.xml,xfire-java/project.xml"
      excludes="*"
      goals="jar:install"
      banner="Installing XFire"
      ignoreFailures="false"/>
	  
    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-plexus/project.xml"
      excludes="*"
      goals="pom:install"
      banner="Installing XFire Plexus POM"
      ignoreFailures="false"/>
            
    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-plexus/project.xml"
      excludes="*"
      goals="jar:install"
      banner="Installing XFire"
      ignoreFailures="false"/>
    
  </goal>
  
  <goal name="jar:deploy"
        description="Deploy jars">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-demo/*,xfire-aegis"
      goals="jar:deploy"
      banner="Installing XFire"
      ignoreFailures="false"/>
    
  </goal>
    
  <goal name="dist:deploy"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-demo/*"
      goals="dist:deploy"
      banner="Deploying XFire Websites"
      ignoreFailures="true"/>
    
  </goal>
      
  <goal name="site:deploy"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-demo/*"
      goals="site:deploy"
      banner="Deploying XFire Websites"
      ignoreFailures="true"/>
    
  </goal>
      
  <goal name="clean"
        description="Clean everything.">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes=""
      goals="clean"
      banner="Cleaning!"
      ignoreFailures="true"/>
    
  </goal>
</project>