<project default="install" xmlns:maven="jelly:maven">
  

  <goal name="install"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-core/project.xml"
      excludes="*"
      goals="pom:install"
      banner="Installing XFire Core POM"
      ignoreFailures="true"/>

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="xfire-plexus/project.xml"
      excludes="*"
      goals="pom:install"
      banner="Installing XFire Plexus POM"
      ignoreFailures="true"/>
            
    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-quickstart/*"
      goals="jar:install"
      banner="Installing XFire"
      ignoreFailures="true"/>
    
  </goal>
  
  <goal name="jar:deploy"
        description="Deploy jars">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-java/*,xfire-quickstart/*"
      goals="jar:deploy"
      banner="Installing XFire"
      ignoreFailures="true"/>
    
  </goal>
  
  <goal name="deploySite"
        description="Generate the site for the entire project">

    <!-- Generate the site for each of the components. -->

    <maven:reactor
      basedir="${basedir}"
      postProcessing="true"
      includes="*/project.xml"
      excludes="xfire-java/*,xfire-quickstart/*"
      goals="site:deploy"
      banner="Deploying XFire Websites"
      ignoreFailures="true"/>
    
  </goal>

</project>