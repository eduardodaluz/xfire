<project>
    <pomVersion>1</pomVersion>
    <name>Loom XFire Module</name>
    <groupId>xfire</groupId>
    <artifactId>xfire-loom</artifactId>
    <currentVersion>1.0-SNAPSHOT</currentVersion>
    <extend>${maven.repo.local}/xfire/poms/xfire-1.0-SNAPSHOT.pom</extend>

    <package>org.codehaus.xfire.loom</package>
    <description>Loom binding for XFire.</description>
    <shortDescription>Loom binding for XFire.</shortDescription>

    <siteDirectory>/home/projects/xfire/public_html/maven/xfire-loom</siteDirectory>

    <versions/>

    <branches/>

    <dependencies>
        <dependency>
            <id>avalon-framework</id>
            <version>4.1.5</version>
        </dependency>

        <dependency>
            <groupId>avalon-phoenix</groupId>
            <artifactId>avalon-phoenix-client</artifactId>
            <version>4.0.4</version>
        </dependency>

        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire-java</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!--
            <dependency>
              <groupId>xfire</groupId>
              <artifactId>xfire-xmlbeans</artifactId>
              <version>1.0-SNAPSHOT</version>
            </dependency>
        -->
        <!-- A snapshot with XMLBEANS-78 patch -->
        <!--
            <dependency>
              <groupId>xfire</groupId>
              <artifactId>xmlbeans</artifactId>
              <version>2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
              <groupId>xmlbeans</groupId>
              <artifactId>xmlbeans-xmlpublic</artifactId>
              <version>2.0-dev-2</version>
            </dependency>
        -->
    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/main</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/*Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.vm</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/main</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.xinfo</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>

    <properties/>
</project>