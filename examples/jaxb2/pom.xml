 <properties>
  <maven.build.dir>${basedir}/target/</maven.build.dir>

 </properties>
  <build>
        <defaultGoal>package</defaultGoal>
        <sourceDirectory>${basedir}/src/main</sourceDirectory>


        <plugins>
            <!--  using antrun to call the commons-attributes pre-compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
							   <delete dir="${maven.build.dir}/generated" />
							   <mkdir dir="${maven.build.dir}/generated" />

							  <taskdef  classname="com.sun.tools.xjc.XJCTask"   name="xjc" classpathref="maven.dependency.classpath"/>

							<xjc target="${maven.build.dir}/generated">
					  		   <schema dir="src/main/META-INF/xfire" includes="*.xsd" />
							</xjc>
                            </tasks>
							<testSourceRoot>${maven.build.dir}/generated</testSourceRoot>

                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
           
		   
           

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

 <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-war-plugin</artifactId>
              <configuration>
               <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
              </configuration>
            </plugin>


        </plugins>

    </build> 
