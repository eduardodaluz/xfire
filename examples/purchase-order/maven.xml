<project xmlns:maven="jelly:maven" xmlns:ant="jelly:ant">

  <goal name="xfire-beansy">  
      <echo>***** Starting to build xml beans from schema *******</echo>  
      <java classname="org.apache.xmlbeans.impl.tool.SchemaCompiler" fork="yes" dir="${basedir}" failonerror="false">
          <classpath refid="maven.dependency.classpath"/>
          <arg value="-d"/>
          <arg value="${maven.xmlbeans.targetdir}"/>
          <arg value="${maven.xmlbeans.schemadir}\po.xsd"/>
      </java>
      <echo>${maven.compile.dest}</echo>
      <copy todir="${maven.build.dir}/classes">
        <fileset dir="${maven.xmlbeans.targetdir}"/>
      </copy>
  </goal>  
  
  <goal name="xfire-beansy:clean">
      <delete quiet="true" dir="${maven.xmlbeans.sourcedir}"/>
      <attainGoal name="clean"/>
  </goal>
  
  <preGoal name="java:compile">
      <attainGoal name="xfire-beansy"/>
  </preGoal>

</project>