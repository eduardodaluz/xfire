	<properties>
		<maven.xmlbeans.targetdir>${basedir}/target/xmlbeans-classes</maven.xmlbeans.targetdir>
		<maven.xmlbeans.schemadir>${basedir}/src/main/xsd</maven.xmlbeans.schemadir>
	</properties>

	<build>
		<defaultGoal>package</defaultGoal>
		<resources>
			<resource>
				<directory>${basedir}/src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<configuration>
							<tasks>
								<java
									classname="org.apache.xmlbeans.impl.tool.SchemaCompiler"
									fork="yes" dir="${basedir}" failonerror="false">
									<classpath
										refid="maven.dependency.classpath" />
									<arg value="-d" />
									<arg
										value="${maven.xmlbeans.targetdir}" />
									<arg
										value="${maven.xmlbeans.schemadir}\po.xsd" />
								</java>
								<echo>copy</echo>
								<copy
									todir="${basedir}/target/classes">
									<fileset
										dir="${maven.xmlbeans.targetdir}" />
								</copy>

							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>

	</build>
