<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/3.0.0 http://maven.apache.org/maven-v3_0_0.xsd">
    <extend>${basedir}/../project.xml</extend>
    <artifactId>xfire-jaxb</artifactId>
    <name>JAXB 1.0 XFire Module</name>
    <package>org.codehaus.xfire.jaxb</package>
    <shortDescription>A JAXB binding for XFire.</shortDescription>
    <description>A JAXB binding for XFire.</description>
    <siteDirectory>
        /home/projects/xfire/public_html/maven/xfire-${pom.currentVersion}/multiproject/${pom.artifactId}
    </siteDirectory>
    <dependencies>
        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire-core</artifactId>
            <version>${pom.currentVersion}</version>
            <url>${pom.url}</url>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>xfire</groupId>
            <artifactId>xfire-aegis</artifactId>
            <version>${pom.currentVersion}</version>
            <url>${pom.url}</url>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>jaxb</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>jaxb</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>jaxb</groupId>
            <artifactId>jaxb-xjc</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>jaxb</groupId>
            <artifactId>jaxb-libs</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>stax-utils</groupId>
            <artifactId>staxutils</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>msv</groupId>
            <artifactId>xsdlib</artifactId>
            <version>20050913</version>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.7.1</version>
        </dependency>
        <dependency>
            <groupId>msv</groupId>
            <artifactId>relaxngDatatype</artifactId>
            <version>20050913</version>
        </dependency>
    </dependencies>

    <build>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <excludes>
                        <exclude>**/*.java</exclude>
                    </excludes>
                    <filtering>false</filtering>
                </resource>
                <resource>
                    <directory>${basedir}/src/test-schemas</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
