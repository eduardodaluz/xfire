<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <import resource="xfire.xml"/>

  <bean id="echo.service" 
        class="org.codehaus.xfire.spring.ServiceBuilderBean"
        init-method="initialize">
    <property name="style"><value>message</value></property>
    <property name="use"><value>literal</value></property>
    <property name="name"><value>Echo</value></property>
    <property name="namespace"><value>urn:Echo</value></property>
    <property name="serviceBuilder"><ref bean="xfire.serviceBuilder"/></property>
    <property name="serviceBean"><value>Echo</value></property>
  </bean>
  
  <bean id="echo" class="org.codehaus.xfire.spring.Echo"/>
</beans>